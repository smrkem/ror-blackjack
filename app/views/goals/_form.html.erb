<%= form_for @goal, remote: true do |f| %>
  <% if @goal.new_record? %>
    <h2>Add a New Goal</h2>
  <% end %>

  <% if @errors.present? %>
    <div class="form-errors">
      <ul class="alert alert-danger">
        <% @errors.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.text_field :name, placeholder: "Goal Name" %>
  </div>

  <div class="form-group">
    <p>How many times per week to complete this goal?</p>
    <%= f.number_field :frequency, placeholder: "1 to 100", min: 1, max: 100 %>
  </div>

  <div class="form-group">
    <%= f.text_area :description, placeholder: "Description (Optional)" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
