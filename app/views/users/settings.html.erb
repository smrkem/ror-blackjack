<h1><%= @user.email %> - Settings</h1>

<%= form_for @user, url: update_settings_path do |f| %>
  <div class="form-group">
    <h4>Select Your Time Zone</h4>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
  </div>

  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
