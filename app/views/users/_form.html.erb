<% if @user.errors.present? %>
  <div class="errors">
    <ul>
      <% @user.errors.full_messages.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= form.text_field :email, type: 'email', placeholder: 'Your Email' %>
</div>

<div class="form-group">
  <%= form.password_field :password, placeholder: 'Choose Password' %>
</div>


<div class="form-group">
  <%= form.password_field :password_confirmation, placeholder: 'Password Again' %>
</div>

<div class="form-group">
  <h4>Select Your Time Zone</h4>
  <%= form.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
</div>
