<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Trackme</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>
    <header class="container">
      <nav class="navbar navbar-default">
        <div class="container-fluid">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to "TrackMe", root_path, class: "navbar-brand" %>
            <% if signed_in? %>
              <p class="pull-right" style="padding: 15px;"><%= current_user.email %></p>
            <% end %>
          </div>

          <div class="collapse navbar-collapse" id="navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <% if signed_in? %>
                <li><%= link_to "Status Report", health_statuses_path %></li>
                <li><%= link_to 'Sign out', sign_out_path, method: :delete %></li>
              <% else %>
                  <li><%= link_to 'Sign in', sign_in_path unless controller_name == 'sessions' %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <section class="container">
      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash alert <%= alert_class(key) %>"><%= value %></div>
        <% end %>
      </div>
      <%= yield %>
    </section>
    <div id="modal">
      <div id="modal-content"></div>
      <div id="modal-background"></div>
    </div>
  </body>
</html>
